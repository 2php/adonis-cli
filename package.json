{
  "name": "adonis-cli",
  "version": "2.1.9",
  "description": "Scaffold new adonis application",
  "keywords": [
    "adonis",
    "adonisjs",
    "cli",
    "installer"
  ],
  "author": "Harminder Virk <virk@adonisjs.com>",
  "contributors": [
    "Romain Lanz <romain.lanz@slynova.ch>"
  ],
  "license": "MIT",
  "main": "src/index.js",
  "bin": {
    "adonis": "index.js"
  },
  "scripts": {
    "lint": "standard",
    "pretest": "npm run lint",
    "posttest": "npm run coverage",
    "test:local": "node --harmony-async-await ./node_modules/.bin/japa",
    "test": "./node_modules/.bin/nyc npm run test:local",
    "test:win": "node --harmony-async-await ./node_modules/japa-cli/index.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "adonis-ace": "git+https://github.com/adonisjs/ace.git#dawn",
    "boxen": "^1.1.0",
    "cli-spinner": "^0.2.6",
    "pify": "^2.3.0",
    "semver": "^5.3.0"
  },
  "devDependencies": {
    "adonis-fold": "^3.0.3",
    "chalk": "^1.1.3",
    "cz-conventional-changelog": "^2.0.0",
    "fs-extra": "^3.0.1",
    "japa": "^1.0.3",
    "japa-cli": "^1.0.1",
    "standard": "^10.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adonisjs/adonis-cli"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-cli/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
