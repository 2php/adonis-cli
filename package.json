{
  "name": "adonis-cli",
  "version": "2.1.9",
  "description": "Scaffold new adonis application",
  "keywords": [
    "adonis",
    "adonisjs",
    "cli",
    "installer"
  ],
  "author": "Harminder Virk <virk@adonisjs.com>",
  "contributors": [
    "Romain Lanz <romain.lanz@slynova.ch>"
  ],
  "license": "MIT",
  "main": "src/index.js",
  "bin": {
    "adonis": "index.js"
  },
  "scripts": {
    "lint": "standard",
    "pretest": "npm run lint",
    "posttest": "npm run coverage",
    "test:local": "FORCE_COLOR=true node bin/index.js --local",
    "test": "nyc npm run test:local",
    "test:win": "set FORCE_COLOR=true && node bin/index.js --win",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "@adonisjs/ace": "^4.0.2",
    "boxen": "^1.2.1",
    "cli-spinner": "^0.2.6",
    "pify": "^3.0.0",
    "semver": "^5.4.1"
  },
  "devDependencies": {
    "@adonisjs/fold": "^4.0.0",
    "chalk": "^2.0.1",
    "coveralls": "^2.13.1",
    "cz-conventional-changelog": "^2.0.0",
    "dedent": "^0.7.0",
    "fs-extra": "^4.0.0",
    "japa": "^1.0.3",
    "japa-cli": "^1.0.1",
    "nyc": "^11.0.3",
    "standard": "^10.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adonisjs/adonis-cli"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-cli/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
